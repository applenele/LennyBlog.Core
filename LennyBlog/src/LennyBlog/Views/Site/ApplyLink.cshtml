@using LennyBlog.Models;
@using CommonMark
@using LennyBlog.ViewComponents;
@{
    ViewBag.Title = "关于我们";
}
<link href="~/styles/view.css" rel="stylesheet" />
<link href="~/styles/bootstrap.min.css" rel="stylesheet" />
<article>
    <div class="l_box f_l">
        <div class="topnews">
            <h2>您现在的位置是：<a href="/">首页</a>&nbsp;&gt;&nbsp;<a href="#">申请链接</a></h2>
            <div class="news_title">申请链接</div>
            <div class="news_content">
                <form method="post" class="form-horizontal" action="/ApplyLink">
                    @Html.AntiForgeryToken()
                    <div class="title control-group">
                        <label class="control-label" for="inputSite">申请链接</label>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="inputEmail">邮箱</label>
                        <div class="controls">
                            <input type="text" id="inputEmail" class="form-control" style="width:400px;" placeholder="邮箱" name="Email">
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="inputSite">站名</label>
                        <div class="controls">
                            <input type="text" id="inputSite" class="form-control" style="width:400px;" placeholder="站台" name="Site">
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="inputUrl">链接</label>
                        <div class="controls">
                            <input type="text" id="inputUrl" class="form-control" style="width:400px;" placeholder="链接" name="Url">
                        </div>
                    </div>
                    <div class="control-group" style="margin-top:20px;">
                        <div class="controls">
                            <button type="submit" class="btn btn-success">申请</button>
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="controls">
                            @Html.ValidationSummary()
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
    <div class="r_box f_r">
        <div class="ad" id="r_ad">
            <div class="mod-sb-panel">

            </div>
        </div>
    </div>
    <!--r_box end -->
</article>