@model LennyBlog.Models.ViewModels.ArticleViewModel
@using LennyBlog.Extensions;
@{
    Layout = "~/Areas/Admin/Views/shared/_LayoutPart.cshtml";
}
<div class="gray-bg wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-sm-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>增加博客</h5>
                </div>
                <div class="ibox-content">
                    <form method="post" class="form-horizontal">
                        @Html.HiddenFor(m => m.IsNew)
                        @Html.HiddenFor(m => m.Id)
                        <div class="form-group">
                            <label class="col-sm-2 control-label">名称</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(u => u.Title, new { @class = "form-control", @id = "txtTitle" })
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group" id="dvDescription">
                            <label class="col-sm-2 control-label">描述</label>
                            <div class="col-sm-10">
                                <textarea name="Description" data-provide="markdown" rows="10" id="txtDescription">@Model.Description</textarea>
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">分类</label>
                            <div class="col-sm-10">
                                @Html.DropDownListFor(m => m.CategoryId, (IEnumerable<SelectListItem>)ViewData["CategoryList"], new { @class = "form-control", @id = "txtCategoryID" })
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">标签（用英文,分割）</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(u => u.Tags, new { @class = "form-control", @id = "txtTags" })
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">置顶顺序（数字）</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(u => u.Top, new { @class = "form-control", @id = "txtTop" })
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">是否推荐</label>
                            <div class="col-sm-10">
                                @Html.EnumToDropDownListFor(u => u.IsRecommend, new { @class = "form-control", @id = "txtIsRecommend" })
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <div class="col-sm-4 col-sm-offset-2">
                                <button class="btn btn-primary" type="submit">保存内容</button>
                                <button class="btn btn-white" type="button" onclick="history.go(-1)">取消</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>